<% layout("/layouts/boilerplate") %>
<body class="bg-light">
  <div class="container py-5 ps-md-5" style="max-width: 700px">
    <h3 class="mb-4 text-primary border-bottom pb-2" style="width: fit-content">
      <%= listing.title %>
    </h3>

    <div class="card shadow-sm bg-white p-3">
      <div class="row g-3 align-items-center">
        <div class="col-md-5">
          <img
            src="<%= listing.image.url %>"
            alt="Listing Image"
            class="img-fluid rounded shadow-sm"
            style="object-fit: cover; height: 250px; width: 100%"
          />
        </div>
        <div class="col-md-7">
          <ul class="list-unstyled mb-0">
            <li class="mb-3">
              <div class="fw-bold text-secondary small">TITLE</div>
              <div class="fs-5"><%= listing.title %></div>
            </li>
            <li class="mb-3">
              <div class="fw-bold text-secondary small">DESCRIPTION</div>
              <div class="text-muted"><%= listing.description %></div>
            </li>
            <li class="mb-3">
              <div class="fw-bold text-secondary small">PRICE</div>
              <div class="fs-5 text-success">
                â‚¹<%= listing.price ? listing.price.toLocaleString("en-IN") :
                "N/A" %>
              </div>
            </li>
            <li class="mb-3">
              <div class="fw-bold text-secondary small">LOCATION</div>
              <div><%= listing.location %></div>
            </li>
            <li>
              <div class="fw-bold text-secondary small">COUNTRY</div>
              <div><%= listing.country %></div>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <a
        href="/listings/<%=listing._id %>/edit"
        class="btn btn-outline-primary px-4"
      >
        Edit this Listing
      </a>
      <form
        action="/listings/<%= listing._id %>/delete"
        method="POST"
        style="display: inline"
      >
        <button
          class="btn btn-outline-primary px-4"
          onclick="return confirm('Are you sure?')"
        >
          Delete Listing
        </button>
      </form>
    </div>
  </div>
</body>
